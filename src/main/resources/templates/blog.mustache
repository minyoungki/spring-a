{{>layouts/header}}
<div class="bg-dark text-white p-5">
    <h1>Min blog</h1>
</div>

<table class="table">
    <thead>
    <tr>
        <th scope="col">ID</th>
        <th scope="col">Title</th>
        <th scope="col">Username</th>
        <th scope="col">Contents</th>
    </tr>
    </thead>
    <tbody>
    {{#blogList}}
        <tr>
            <th scope="row">{{id}}</th>
            <td><a href="/blog/get/{{id}}">{{title}}</a></td>
            <td>{{username}}</td>
            <td>{{contents}}</td>
        </tr>
    {{/blogList}}
    </tbody>
</table>

<a href="/blog/post"class="btn btn primary"> 글 작성 </a>

{{>layouts/footer}}